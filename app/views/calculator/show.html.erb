<% provide(:title, 'Calculator')%>

<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<style>

 body 
    {
        background-image: linear-gradient(to right, #ff8177 0%, #ff867a 0%, #ff8c7f 21%, #f99185 52%, #cf556c 78%, #b12a5b 100%);
    }

    .heading {
        text-align: center;
    }

    .body{ 
        display: inline-block;
        border-radius: 4px;
        width: 50%;
    }

    .feedbackForm {
      display: inline-block;
      float: left;
      width: 40%;
    }

    textarea {
      width: 100px;
      height: 150px;
    }

    table {
      table-layout: fixed;
      word-wrap: break-word;
    }


</style>
<body>
    <header> <!------ Include the above in your HEAD tag ---------->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <%= link_to "Prunch", home_path, class: 'navbar-brand'%>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item <%= active_class(algebra_path) %>">
                <%= link_to "Algebra", algebra_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(trig_path) %>">
                <%= link_to "Algebra II / Trig", trig_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(calculus_path) %>">
                <%= link_to "Calculus", calculus_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(stem_path) %>">
                <%= link_to "Stem", stem_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(rec_path) %>">
                <%= link_to "Recommend a Calculator", rec_path, class: 'nav-link'%>
              </li>
            </ul>
          </div>
        </nav>
    </header>   
    <div class="image1">
     
    </div>

    <div class="heading">
        <h2><%= @calculator.name %></h2>
        <p> <%= image_tag ("#{@calculator.name}.png"), size: "400x400" , src: 'Image Not Found', onerror: 'this.error=null;this.src="Placeholder.png"' =%></p> 
        <p> 

            <%= @calculator.description%>
        </p>
        <hr>
        <h3>Capabilities:</h3>
          <%= @calculator.capabilities%>
        <hr>
        <h3>Our Rating:</h3>
          <%= @calculator.rating %>/5 Stars
        <hr>
        <h3>Link to this site:</h3>
          <a href = <%= @calculator.link_url %>>Link</a>
    </div>
    <br><br>
      <div class="row">
        <div class="col-sm-6">
        <table class="table table-bordered">
        <thead>
          <tr>
            <th class="text-center" scope="col" >User Comments</th>
          </tr>
        </thead>
        <tbody>
        <% @calculator.users.each do |item| %>
              <tr>
              <td><%= item.comment %></td>
          <% end %>
        </tbody>
        </table>
        </div>
      </div>


    <div class="field">
        <h1>Feedback</h1>
        <p>If you believe there is a better calculator that we are not aware of please go <%= link_to 'here', rec_path %> and fill a form to make your voice heard.</p>
      <%= form_with model: @user, local: true do |form| %>
        <div class="feedbackForm">
          <%= form.text_area :comment, class: 'form-control' %>
        </div>

        <br>
        <div class='actions'>
         <p><%= form.submit "Submit", class: "btn btn-primary" %></p>
        </div>
        <% end %>
    </div>
    <br><br>
  </body>

