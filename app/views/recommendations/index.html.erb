<% provide(:title, 'Recommend a Calculator')%>

<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<style>
    body 
    {
        background-image: linear-gradient(to right, #ff8177 0%, #ff867a 0%, #ff8c7f 21%, #f99185 52%, #cf556c 78%, #b12a5b 100%);
    }

    .head1 {
        text-align: center;
    }

    .recomForm1, input, textarea, label{ 
        display: inline-block;
        border-radius: 4px;
        width: 50%;
    }

    .recomForm2, input, textarea, label{
        display: inline-block;
        float: left;
        width: 50%; 
        bottom: 571px;
    }

    .recomForm3, input, textarea, label { 
        display: inline-block;
        width: 100%;
        height: auto;
        padding-top: 4px;
        
    }

    .LReview {
        position: absolute;
        float: left;
        right: 575px;
        bottom: 558px;
        
         }

</style>
<body>
    <header> <!------ Include the above in your HEAD tag ---------->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <%= link_to "Prunch", home_path, class: 'navbar-brand'%>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item <%= active_class(algebra_path) %>">
                <%= link_to "Algebra", algebra_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(trig_path) %>">
                <%= link_to "Algebra II / Trig", trig_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(calculus_path) %>">
                <%= link_to "Calculus", calculus_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(stem_path) %>">
                <%= link_to "Stem", stem_path, class: 'nav-link'%>
              </li>
              <li class="nav-item <%= active_class(rec_path) %>">
                <%= link_to "Recommend a Calculator", rec_path, class: 'nav-link'%>
              </li>
            </ul>
          </div>
        </nav>
    </header>

<main role='main' class="container">

  <h1>Recommendations</h1>

  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Subject</th>
        <th scope="col">Comment</th>
        <th scope="col">Recommend</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @recommendations.each do |item| %>
          <tr>
          <td><%= item.subject %></td>
          <td><%= item.comment %></td>
          <td><%= item.recommend %></td>
          
          <td>
          <%= link_to "Show", rec_path(item) %> |</td>

          </tr>
      <% end %>
    </tbody>
  </table>

  <p>
    <%= link_to 'Leave Recommendation', new_recom_path%>
    <br>
    <% values = Recommendation.count%>
  
  </p>
</main>